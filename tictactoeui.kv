MDFloatLayout:
    #md_bg_color: 1,1,1,1
    Image:
        source:"ttt_title.png"
        size_hint_x: .7
        pos_hint: {"center_x":.5, "center_y":.92}

    MDIconButton:
        icon:"theme-light-dark"
        pos_hint: {"center_x":.1,"center_y":.92}
        on_release: app.change_theme()

    MDIconButton:
        icon:"refresh"
        pos_hint: {"center_x":.93,"center_y":.92}
        on_release: app.refresh()

    MDLabel:
